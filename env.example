# Server Configuration
NODE_ENV=production
PORT=3000
SERVER_URL=http://localhost:3000
SESSION_SECRET=change-this-secret-key-in-production

# PostgreSQL Database Configuration (connection string)
DATABASE_URL=postgres://postgres:your_password@localhost:5432/portfolio
# For Docker: DATABASE_URL=postgres://postgres:1234@postgres:5432/postgres
# DB_SSL=true for cloud providers (Heroku, Railway, etc.)

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880

# Google Cloud Storage (GCS) Configuration
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name
# GCP service account JSON (paste the entire JSON content as a single line)
GCP_KEY_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Security Configuration
BCRYPT_SALT_ROUNDS=10

# Email Configuration (Optional - for contact form)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Gmail OAuth Configuration (Optional - alternative to SMTP)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
